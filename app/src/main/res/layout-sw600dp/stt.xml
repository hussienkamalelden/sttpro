<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1f1f1f">
    <RelativeLayout
        android:id="@+id/inner_container"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="100dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/inner_container_2"
            android:layout_width="match_parent"
            android:background="@drawable/main_edittext_bg"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:layerType="software"
            android:layout_height="match_parent">
            <android.support.v4.widget.NestedScrollView
                android:id="@+id/nested_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:scrollbars="vertical"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="72dp">
                <EditText
                    android:id="@+id/ContentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint"
                    android:padding="15dp"
                    android:textColor="#cfcdcd"
                    android:textSize="35sp"
                    android:scrollbars="none"
                    android:background="@null"/>
            </android.support.v4.widget.NestedScrollView>
            <RelativeLayout
                android:id="@+id/mini_option_top"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_alignParentBottom="true">
                <RelativeLayout
                    android:id="@+id/dash_wall_top"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layerType="software"
                    android:background="@drawable/mini_option_wall"/>
                <RelativeLayout
                    android:id="@+id/mini_option_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/dash_wall_top">
                    <ImageView
                        android:id="@+id/undo"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/undo"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="20dp"
                        android:contentDescription="@string/desc"/>
                    <ImageView
                        android:id="@+id/redo"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_toRightOf="@+id/undo"
                        android:layout_centerVertical="true"
                        android:src="@drawable/redo"
                        android:layout_marginRight="20dp"
                        android:contentDescription="@string/desc"/>
                    <ImageView
                        android:id="@+id/Copy"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_toRightOf="@+id/redo"
                        android:layout_centerVertical="true"
                        android:src="@drawable/copy_icon"
                        android:layout_marginRight="20dp"
                        android:contentDescription="@string/desc"/>
                    <ImageView
                        android:id="@+id/keyboard"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/keyboard"
                        android:layout_toRightOf="@+id/Copy"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:contentDescription="@string/desc"/>
                    <RelativeLayout
                        android:id="@+id/mini_option_wall"
                        android:layout_width="1dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:background="#343434"
                        android:layout_toRightOf="@+id/keyboard"/>
                    <TextView
                        android:id="@+id/words_counter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/mini_option_wall"
                        android:text="0"
                        android:textColor="#8d8c8c"
                        android:textSize="30sp"
                        android:gravity="center"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/scroll_up"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/up"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/scroll_down"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/down"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/speak_block_container"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true">
            <RelativeLayout
                android:id="@+id/speak_block"
                android:layout_width="match_parent"
                android:background="#343434"
                android:layout_marginTop="40dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true">
                <Button
                    android:id="@+id/Language"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#dcdada"
                    android:layout_toRightOf="@+id/speak_block_wall"
                    android:background="#333337"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textSize="23sp"
                    android:text="@string/language"/>
                <RelativeLayout
                    android:id="@+id/speak_block_wall"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/desc"/>
                <com.suke.widget.SwitchButton
                    android:id="@+id/CheckAutoStt"
                    android:layout_width="62dp"
                    android:layout_height="35dp"
                    android:layout_toLeftOf="@+id/speak_block_wall"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    app:sb_checked="false"
                    app:sb_enable_effect="true"
                    app:sb_shadow_effect="true"
                    app:sb_effect_duration="200"
                    app:sb_show_indicator="false"
                    app:sb_button_color="#f6f6f6"
                    app:sb_background="#d6d6d6"
                    app:sb_checked_color="#00b7d9"/>
                <ImageView
                    android:id="@+id/up_down_action_bar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/up_action_bar"
                    android:contentDescription="@string/desc"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/SpeakButton"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/speak_button"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/desc"/>

            <RelativeLayout
                android:id="@+id/voice_detector_container"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toLeftOf="@+id/SpeakButton">
                <ImageView
                    android:id="@+id/Listen"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/thumb"
                    android:contentDescription="@string/desc"/>
                <TextView
                    android:id="@+id/auto_stt_counter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:text="10"
                    android:visibility="gone"
                    android:textColor="#02a1be"
                    android:textSize="35sp"
                    android:gravity="center"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ActionBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/speak_block_container"
            android:visibility="gone"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#333337">
            <HorizontalScrollView
                android:id="@+id/horizontal_scroll_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scrollbars="none"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <RelativeLayout
                    android:id="@+id/action_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/Zoom_In"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/zoom_in_icon"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="20dp"
                        android:contentDescription="@string/desc"/>
                    <ImageView
                        android:id="@+id/Zoom_Out"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_toRightOf="@+id/Zoom_In"
                        android:layout_centerVertical="true"
                        android:src="@drawable/zoom_out_icon"
                        android:layout_marginRight="20dp"
                        android:contentDescription="@string/desc"/>
                    <ImageView
                        android:id="@+id/Share"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/share_icon"
                        android:layout_toRightOf="@+id/Zoom_Out"
                        android:layout_marginRight="20dp"
                        android:contentDescription="@string/desc"/>
                    <ImageView
                        android:id="@+id/Delete"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_toRightOf="@+id/Share"
                        android:layout_centerVertical="true"
                        android:src="@drawable/delete_icon"
                        android:layout_marginRight="20dp"
                        android:contentDescription="@string/desc"/>
                    <ImageView
                        android:id="@+id/tts"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_toRightOf="@+id/Delete"
                        android:layout_centerVertical="true"
                        android:src="@drawable/tts_icon"
                        android:layout_marginRight="20dp"
                        android:contentDescription="@string/desc"/>
                    <ImageView
                        android:id="@+id/to_text_file"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_toRightOf="@+id/tts"
                        android:layout_centerVertical="true"
                        android:src="@drawable/text_file"
                        android:layout_marginRight="20dp"
                        android:contentDescription="@string/desc"/>
                    <ImageView
                        android:id="@+id/exist_files"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_toRightOf="@+id/to_text_file"
                        android:layout_centerVertical="true"
                        android:src="@drawable/files_icon"
                        android:layout_marginRight="20dp"
                        android:contentDescription="@string/desc"/>
                    <ImageView
                        android:id="@+id/reserved_words"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_toRightOf="@+id/exist_files"
                        android:layout_centerVertical="true"
                        android:src="@drawable/reserved_icon"
                        android:layout_marginRight="20dp"
                        android:contentDescription="@string/desc"/>
                    <ImageView
                        android:id="@+id/replace"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_toRightOf="@+id/reserved_words"
                        android:layout_centerVertical="true"
                        android:src="@drawable/replace_icon"
                        android:layout_marginRight="20dp"
                        android:contentDescription="@string/desc"/>
                    <ImageView
                        android:id="@+id/inner_settings"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/settings_icon"
                        android:layout_toRightOf="@+id/replace"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/desc"/>
                </RelativeLayout>
            </HorizontalScrollView>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
