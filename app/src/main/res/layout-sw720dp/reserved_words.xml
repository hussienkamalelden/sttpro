<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1f1f1f">
    <RelativeLayout
        android:id="@+id/TopTitle"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#3a3a3a">
        <ImageView
            android:id="@+id/title_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/reserved_icon"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/desc"/>
        <TextView
            android:id="@+id/reserved_words_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/title_icon"
            android:textSize="50sp"
            android:textColor="#dcdada"
            android:gravity="center"
            android:text="@string/reserved_words_title_text" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/TopTitle"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="180dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="10dp"
            android:scrollbars="none"
            android:divider="@android:color/transparent">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <TextView
        android:id="@+id/no_reserved_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textColor="#dcdada"
        android:text="@string/no_reserved_words"/>
    <RelativeLayout
        android:id="@+id/confirmation_box"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/add_word"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/reset"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ripple_effect">
            <TextView
                android:id="@+id/add_word_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_word_text"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="55sp"
                android:textColor="#dcdada" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/reset"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/spinner_bg">
            <ImageView
                android:id="@+id/reset_text"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/reset"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/desc"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
